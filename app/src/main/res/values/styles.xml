<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Text Appearance styles only -->
    <style name="TextAppearance.Kore.NavDrawerItem" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextAppearance.Kore.Title" parent="TextAppearance.AppCompat.Title" />

    <style name="TextAppearance.Kore.Title.Small" parent="TextAppearance.AppCompat.Subhead" />

    <style name="TextAppearance.Kore.Body" parent="TextAppearance.AppCompat.Body1" />

    <style name="TextAppearance.Kore.NowPlaying.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Kore.NowPlaying.Details" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white_dim_70pct</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- For use in TextAppearanceSpan in code -->
    <style name="TextAppearanceSpanBold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextAppearanceSpanItalic">
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Widget styles -->
    <style name="Widget.Kore" parent="android:Widget"/>

    <style name="Widget.Kore.Button.Borderless" parent="Widget.Kore">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
        <item name="android:tint">?attr/defaultButtonColorFilter</item>
    </style>

    <style name="Widget.Kore.Grid" parent="Widget.Kore">
        <item name="android:columnWidth">@dimen/default_grid_column_width</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="Widget.Kore.Grid.Host" parent="Widget.Kore.Grid">
        <item name="android:horizontalSpacing">@dimen/default_grid_horizontal_spacing</item>
        <item name="android:verticalSpacing">@dimen/default_grid_vertical_spacing</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:padding">@dimen/small_padding</item>
    </style>

    <style name="Widget.Kore.Grid.Media" parent="Widget.Kore.Grid">
        <item name="fastScrollPopupBgColor">?attr/colorPrimary</item>
        <item name="fastScrollPopupTextColor">?attr/textColorOverPrimary</item>
        <item name="fastScrollPopupTextSize">@dimen/fastscroll_text_size</item>
        <item name="fastScrollPopupBackgroundSize">@dimen/fastscroll_popup_size</item>
        <item name="fastScrollThumbColor">?attr/colorPrimary</item>
        <item name="fastScrollThumbInactiveColor">?attr/fastscrollHandleColor</item>
        <item name="fastScrollPopupPosition">adjacent</item>

        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingStart">@dimen/default_card_margin</item>
    </style>

    <style name="Widget.Kore.CardView">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/default_card_elevation</item>
        <item name="cardBackgroundColor">?attr/appCardBackgroundColor</item>
        <item name="android:layout_marginEnd">@dimen/default_card_margin</item>
        <item name="android:layout_marginTop">@dimen/default_card_margin</item>
    </style>

    <style name="Widget.Kore.Divider.Horizontal" parent="Widget.Kore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/separatorColor</item>
    </style>

    <style name="Widget.Kore.PagerIndicator">
        <item name="fillColor">?attr/appTextColorPrimary</item>
        <item name="strokeColor">?attr/appTextColorSecondary</item>
        <item name="pageColor">?attr/appTextColorSecondary</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
        <item name="circleGapWidth">6dp</item>
    </style>

    <style name="Widget.Kore.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- These styles specify the dimensions of the control pad. Ideally styles shouldn't contain layout_ attributes,
    but instead of having to specify the whole layout for different screen dimensions it's easier to do it here -->
    <style name="Widget.Kore.ControlPad" parent="Widget.Kore">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Widget.Kore.ControlPad.FrameLayout" parent="Widget.Kore.ControlPad">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- TextView widget styles, including more attributes than simply textAppearance -->
    <style name="Widget.Kore.TextView" parent="Widget.Kore">
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Kore.TextView.WizardTitle" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">?attr/textColorOverPrimary</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.Kore.TextView.WizardMessage" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:padding">@dimen/large_padding</item>
    </style>

    <style name="Widget.Kore.TextView.Edit" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Kore.TextView.MediaTitle" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:fontFamily" >sans-serif-light</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Widget.Kore.TextView.MediaTitle.Remote" parent="Widget.Kore.TextView.MediaTitle">
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Kore.TextView.MediaDetails" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/appTextColorSecondary</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="Widget.Kore.TextView.MediaDetails.Remote" parent="Widget.Kore.TextView.MediaDetails">
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
    </style>

    <style name="Widget.Kore.TextView.MediaSmallDetails" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">?attr/appTextColorSecondary</item>
    </style>

    <style name="Widget.Kore.TextView.MediaRating" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">?attr/appTextColorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Kore.TextView.MediaCast" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.Kore.TextView.MediaInfo" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">?attr/appTextColorPrimary</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="Widget.Kore.TextView.MediaProgress" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/appTextColorSecondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:minEms">3</item>
    </style>

    <style name="Widget.Kore.TextView.MediaList" parent="Widget.Kore.TextView">
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Kore.TextView.MediaList.Title" parent="Widget.Kore.TextView.MediaList">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.Kore.TextView.MediaList.Details" parent="Widget.Kore.TextView.MediaList">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/appTextColorSecondary</item>
        <item name="android:maxLines">2</item>
        <!--<item name="android:paddingBottom">4dp</item>-->
    </style>

    <style name="Widget.Kore.TextView.MediaList.Info" parent="Widget.Kore.TextView.MediaList">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
        <item name="android:textColor">?attr/appTextColorSecondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="Widget.Kore.TextView.InfoTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Kore.TextView.InfoDetails">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:padding">@dimen/default_padding</item>
        <!--<item name="android:maxLines">2</item>-->
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Kore.TextView.Day" parent="Widget.Kore.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="Widget.Kore.TextView.FAB">
        <item name="android:background">@drawable/rounded_corners_shape</item>
        <item name="android:colorBackground">@drawable/rounded_corners_shape</item>
        <item name="android:textColor">?attr/fabLabelTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

