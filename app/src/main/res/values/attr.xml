<resources>
    <!-- Custom color resources -->
    <attr name="colorInProgress" format="reference|color" />
    <attr name="colorFinished" format="reference|color" />
    <attr name="colorWizardTitleText" format="reference|color" />
    <attr name="colorWizardTitleBackground" format="reference|color" />

    <attr name="kodiStatusConnecting" format="reference|color" />
    <attr name="kodiStatusConnected" format="reference|color" />
    <attr name="kodiStatusUnavailable" format="reference|color" />

    <!-- Icons -->
    <attr name="iconOverflow" format="reference" />

    <!-- Square Grid Layout Widget -->
    <declare-styleable name="SquareGridLayout">
        <attr name="columnCount" format="integer"/>
    </declare-styleable>

    <!-- Ranting Bar Widget -->
    <declare-styleable name="RatingBar">
        <attr name="backgroundColor" format="reference|color"/>
        <attr name="foregroundColor" format="reference|color"/>
        <attr name="iconCount" format="integer"/>
        <attr name="icon" format="reference"/>
    </declare-styleable>

    <!-- Media Playback Bar Widget -->
    <declare-styleable name="MediaPlaybackBar">
        <attr name="view_mode" format="enum">
            <enum name="full" value="0" />
            <enum name="no_stop_button" value="1" />
            <enum name="single_movement_buttons" value="2" />
        </attr>
    </declare-styleable>

    <!-- Dynamic List View -->
    <declare-styleable name="DynamicListView">
        <attr name="hoverLineTickness" format="reference|dimension"/>
        <attr name="hoverLineColor" format="reference|color"/>
    </declare-styleable>

    <!-- Circle Page Indicator Widget -->
    <declare-styleable name="ViewPagerIndicator">
        <!-- Style of the circle indicator. -->
        <attr name="vpiCirclePageIndicatorStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">
        <!-- Whether or not the indicators should be centered. -->
        <attr name="centered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation"/>
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="radius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension" />
        <!-- View background -->
        <attr name="android:background"/>
        <!-- Spacing between the circles. -->
        <attr name="circleGapWidth" format="dimension" />
    </declare-styleable>

</resources>

