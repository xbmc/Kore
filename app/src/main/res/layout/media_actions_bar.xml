<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <org.xbmc.kore.ui.widgets.HighlightButton
        android:id="@+id/volume_mute"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_volume_off_white_24dp"
        android:contentDescription="@string/volume_mute"/>

    <org.xbmc.kore.ui.widgets.VolumeLevelIndicator
        android:id="@+id/volume_level_indicator"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical" />

    <org.xbmc.kore.ui.widgets.RepeatModeButton
        android:id="@+id/repeat"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_repeat_white_24dp"
        android:contentDescription="@string/repeat"/>
    <org.xbmc.kore.ui.widgets.HighlightButton
        android:id="@+id/shuffle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_shuffle_white_24dp"
        android:contentDescription="@string/shuffle"/>

    <ImageButton
        android:id="@+id/audiostreams"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_spatial_audio_off_white_24dp"
        android:contentDescription="@string/audiostreams"/>

    <org.xbmc.kore.ui.widgets.HighlightButton
        android:id="@+id/subtitles"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_subtitles_white_24dp"
        android:contentDescription="@string/subtitles"/>

    <org.xbmc.kore.ui.widgets.HighlightButton
        android:id="@+id/party_mode"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_celebration_white_24dp"
        android:contentDescription="@string/party_mode"/>

    <ImageButton
        android:id="@+id/overflow"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/Widget.Kore.Button.Borderless"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:contentDescription="@string/subtitles"/>
</merge>